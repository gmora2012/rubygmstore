<%= form_for @category do |f| %>
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Quick Edit Category</h5>
</div>
<div class="modal-body">
  <div class="form-group row">
    <%= f.label :Name, class: "col-sm-3 col-form-label-lg" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :Keywords, class: "col-sm-3 col-form-label-lg" %>
    <div class="col-sm-5">
      <%= f.text_field :keywords, class: "form-control" %>
    </div>
  </div>
    <br />
  <br />
</div>
<div class="modal-footer">
    <%= f.submit nil, class: "btn btn-primary" %>
</div>
<% end %>