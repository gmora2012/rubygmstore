<h1>Available Categories<h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <h6><b>Create New Category:</b></h6>
        <%= link_to "Create (+)", categories_new_path, class: "btn btn-primary" %>
    </div>
</div>
<hr>
<h4>Categories List:</h4>
<br/>
<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Keywords</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
    <tr>
        <td><%= category.name %></td>
        <td><%= category.keywords %></td>
        <td>
            <%= link_to "Edit", edit_category_path(category), remote: true, class: "btn btn-warning" %>
            <%= link_to "Delete", category, method: :delete, data: {confirm: "Do you want to delete the category?"}, class: "btn btn-danger"  %>
        </td>
    </tr>
    <% end %>
    </tbody>
</table>
</div>

<!-- Quick Edit Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>
