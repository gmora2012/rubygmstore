<h1>Available Stores<h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <h6><b>Create New Store:</b></h6>
        <%= link_to "Create (+)", stores_new_path, class: "btn btn-primary" %>
    </div>
</div>
<hr>
<h4><b>Stores List:</b></h4>
<br>
<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Street</th>
        <th scope="col">Number</th>
        <th scope="col">Zip Code</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">Products Added</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @stores.each do |store| %>
    <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.number %></td>
        <td><%= store.zipcode %></td>
        <td><%= store.city %></td>
        <td><%= store.country %></td>
        <td><%= store.products.count %></td>
        <td>
            <%= link_to "Quick Edit", edit_store_path(store), remote: true, class: "btn btn-warning" %>
            <%= link_to "Edit", edit_store_path(store), class: "btn btn-warning" %>
            <%= link_to "Delete", store, method: :delete, data: {confirm: "Do you want to delete this store?"}, class: "btn btn-danger" %>
        </td>
    </tr>
    <% end %>
    </tbody>
</table>
</div>

<!-- Quick Edit Modal -->
<div class="modal fade" id="storeModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>
